<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Me</title>
    <link rel="stylesheet" href="/stylesheets/AllPageCss/navbar.css">
    <link rel="stylesheet" href="/stylesheets/contactPage.css">
    <link rel="stylesheet" href="/stylesheets/AllPageCss/footer.css">
</head>

<body>
    <%- include('./partials/navbar.ejs') %>
        <main>
            <div class="fullscreen">
                <h1 class="email-please">Contact Me</h1>
                <iframe name="dummyframe" id="dummyframe" style="display: none"></iframe>
                <div class="email-form">
                    <form action="https://formsubmit.co/jomarin002@gmail.com" method="post" id="userform"
                        target="dummyframe">
                        <label for="email" class="email-label"><strong>Your Email:</strong></label>
                        <input type="email" name="email" placeholder="Email Address" class="email" required>
                        <label name="message" class="message-label"><strong>Your Message:</strong></label>
                        <textarea rows="7" name="message" id="comment" form="userform"
                            placeholder="Leave Your Message Here"></textarea>
                        <div class="error-empty">*Message Cannot Be Empty</div>
                        <button type="submit" class="button-form">Send</button>
                    </form>
                </div>
            </div>
        </main>

        <%- include('./partials/footer.ejs') %>
            <script src="/scripts/contactPage.js"></script>
</body>

</html>